<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page" >

    <RelativeLayout style="@style/topbar_bg" >

        <TextView
            android:id="@+id/tvWebViewReturn"
            style="@style/topbar_return_tv" />

        <TextView
            android:id="@+id/tvWebViewTitle"
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <WebView
        android:id="@+id/wvWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout style="@style/edit_item" >

        <EditText
            android:id="@+id/etWebView"
            style="@style/edit_item_right_et"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:hint="请输入网址"
            android:inputType="textWebEditText"
            android:maxLength="1000"
            android:paddingLeft="6dp" />

        <ImageButton
            android:id="@+id/ibtnWebView"
            style="@style/img_btn"
            android:background="@drawable/bg_item_to_alpha"
            android:padding="6dp"
            android:src="@drawable/forward_light" />
    </LinearLayout>

</LinearLayout>